<div id="login_box">
	<h1>Login</h1>
	<% form_tag do -%>
	<p><label for="login">Username</label><br/>
	<%= text_field_tag 'login', 'first.last', :autofocus => true %> @gordon.edu</p>

	<p><label for="password">Password</label><br/>
	<%= password_field_tag 'password' %></p>

	<p><%= submit_tag 'Log in' %></p>
	<% end -%>
</div>	

