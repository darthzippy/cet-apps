<div id="login_box">
	<h1>Login</h1>
	<% form_tag do -%>
	<p><label for="login">Gordon Username <span class="login_tips">(You don't need '@gordon.edu')</span></label><br/>
	<%= text_field_tag 'login' %></p>

	<p><label for="password">Password</label><br/>
	<%= password_field_tag 'password' %></p>

	<p><%= submit_tag 'Log in' %></p>
	<% end -%>
</div>	

