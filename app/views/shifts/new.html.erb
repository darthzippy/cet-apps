<h1>New shift</h1>

<% form_for(@shift) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :cet_user_id %><br />
    <%= f.text_field :cet_user_id %>
  </p>
  <p>
    <%= f.label :payperiod_id %><br />
    <%= f.text_field :payperiod_id %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </p>
  <p>
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', shifts_path %>
