<h2>Advanced Search</h2>

<%= link_to "Most Recent Search", search_path(@latest_search) %>

<% form_for @search do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :mac_or_pc %><br />
    <%= f.select(:mac_or_pc, %w{ Mac PC Printer }, {:prompt => "Select Mac, PC or Printer"}) %>
  </p>
  <p>
    <%= f.label :computer_type %><br />
    <%= f.select(:computer_type, %w{ Desktop Laptop }, {:prompt => "Select a Computer Type"}) %>
  </p>
  <p>
    <%= f.label :minimum_purchase_date %><br />
    <%= f.text_field :min_purdate, :class => 'search-date' %>
  </p>
  <p>
    <%= f.label :max_purdate %><br />
    <%= f.text_field :max_purdate, :class => 'search-date' %>
  </p>
<br />
  <p><%= f.submit "Submit" %></p>
<% end %>


