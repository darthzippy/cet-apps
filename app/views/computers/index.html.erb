<div id="paginate">
<%= will_paginate @computers %>	
</div>

<%= render :partial => 'search_by_control' %>

<h2>COMPUTERS</h2>
<%= render :partial => 'departments/filter' %>

<table cellspacing="0">
  <tr>
    <th>Control</th>
    <th>Model</th>
	<th>Serial #</th>
    <th>Manufacturer</th>
	<th>Department</th>
	<th>User</th>
	<th>Options</th>
  </tr>

<% for computer in @computers %>
  <%= render :partial => computer %>
<% end %>
</table>

<p>
  <strong>Filter:</strong>
  <%= link_to_unless_current "All", :filter => 'all' %> |
  <%= link_to_unless_current "PCs", :filter => 'pcs' %> |
  <%= link_to_unless_current "Macs", :filter => 'macs' %> |
  <%= link_to_unless_current "Printers", :filter => 'printers' %>
</p>

