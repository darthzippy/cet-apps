<%= render :partial => 'search_by_control' %>
<br />

<div id="computer_show_content">
	<h3>COMPUTER INFO</h3>
	<div id="computer_show_computer_info1" class="span-9">

		<p>
		  <b>Control:</b>
		  <%=h @computer.control %>
		</p>

		<p>
		  <b>Serial:</b>
		  <%=h @computer.serial %>
		</p>

		<p>
		  <b>Model:</b>
		  <%=h @computer.model %>
		</p>

		<p>
		  <b>Manufacturer:</b>
		  <%=h @computer.manufacturer %>
		</p>
		<p> 
		<% if @computer.is_printer? %>
		  <b>Cameron ID:</b>
		  <%=h @computer.cameron_id %>
		<% else %>
		  <b>Part Number:</b>
		  <%=h @computer.part_number %>
		<% end %>
		</p>
		<p>
		  <b>Type:</b>
		  <%=h @computer.computer_type %>
		</p>
	</div>

	<div id="computer_show_computer_info2" class="span-9 last">
		<p>
		  <b>Memory:</b>
		  <%=h @computer.memory %>
		</p>

		<p>
		  <b>Hard drive:</b>
		  <%=h @computer.hard_drive %>
		</p>
		
		<p>
		  <b>Warranty Type:</b>
		  <%=h @computer.warranty_type %>
		</p>
		<p>
		  <b>Warranty Length:</b>
		  <%=h pluralize(@computer.warranty_length, 'year') %>
		</p>
		<p>
		  <b>Warranty Ends:</b>
		    <%=h @computer.warranty_end_date %>
		</p>	
	</div>
	
	<div class="clear"></div>
	
	<div id="computer_show_computer_status">
	    <p>
		  <b>Status:</b>
		  <%=h @computer.status %>
		</p>

		<p>
		  <b>Cstatus:</b>
		  <%=h @computer.cstatus %>
		</p>
		
		<p>
		  <b>Maintenance Fee:</b>
		  <%=h number_to_currency(@computer.maintenance_fee, :precision => 0) unless @computer.maintenance_fee.nil? %>
		</p>
		
	</div>
	<div id="computer_show_computer_status2">
		
	</div>
	
	<div class="clear"></div>
	
	<div id="computer_show_purchase_info" class="span-9">
		<p>
		  <b>Purchase date:</b>
		  <%=h @computer.purchase_date.to_formatted_s(:long) unless @computer.purchase_date.nil? %>
		</p>

		<p>
		  <b>Purchase price:</b>
		  <%=h number_to_currency(@computer.purchase_price) %>
		</p>

		<p>
		  <b>Purchase acct:</b>
		  <%=h @computer.purchase_acct %>
		</p>
		<p>
		  <%= link_to "Show Purchase Info from VAX", @computer, :id => 'computer_show_purchase_info_vax_link' %>
		</p>
		<br />
		<div id="computer_show_purchase_info_vax">
			<p>
			  <b>Purchase date:</b>
			  <%=h @computer.legacy_purchase_date %>
			</p>
			<p>
			  <b>Purchase acct:</b>
			  <%=h @computer.legacy_account %>
			</p>	
		</div>

	</div>

	<div id="computer_show_user_info" class="span-9 last">
		<p>
		  <b>Department:</b>
		  <%=h @computer.departments.first.name unless @computer.departments.first.nil? %>
		</p>
		<p>
		  <b>User:</b>
		  <%=h @computer.user.fullname unless @computer.user.nil? %>
		</p>
		<p>
		  <%= link_to "Show User Info from VAX", @computer, :id => 'computer_show_user_info_vax_link' %>
		</p>
		<br />
		<div id="computer_show_user_info_vax">
			<p>
			  <b>Department:</b>
			  <%=h @computer.legacy_department %>
			</p>
			<p>
			  <b>User:</b>
			  <%=h @computer.legacy_user %>
			</p>	
		</div>
	</div>
	
	<div class="clear"></div>

	<div id="computer_show_comments_list">
	  <%= link_to 'Add Comment', nil, :id => "add_comment" %>
	  <div id="comments_list">
	    <%= render :partial => 'comments/comments', :locals => {:computer => @computer} %>	  	
	  </div>
	</div>

	<br />
	<br />
	<%= link_to 'Edit', edit_computer_path(@computer) %> |
	<%= link_to 'Back', computers_path %>	
</div>

